<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data kontak tidak ada <br />
        <a href="/contact" class="alert-link fw-normal">&laquo; back</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.mPhone %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a
            href="/contact/edit/<%= contact._id %>"
            class="btn btn-info mb-3 badge"
            >Edit</a
          >
          <form action="/contact?_method=DELETE" method="POST" class="d-inline">
            <input type="hidden" name="_id" value="<%= contact._id %>" />
            <button
              type="submit"
              class="btn btn-danger badge"
              onclick="return confirm('DELETE?')"
            >
              DELETE
            </button>
          </form>

          <a href="/contact" class="card-link d-block">&laquo; back</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Kontak</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">
        Tambah Data Contact</a
      >

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success fw-bold" role="alert">
        <%= msg %> <br />
      </div>
      <% } %>

      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Nama</th>
            <th scope="col">Email</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts == '') { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data kontak masih kosong <br />
              </div>
            </td>
          </tr>
          <% } else { %> <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td>
              <a
                href="/contact/<%= contact._id %>"
                class="btn btn-success badge rounded-pill"
              >
                <i class="bi bi-info-circle"></i> details
              </a>
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
